{
  "compilerOptions": {
    "target": "es5",
    "jsx": "preserve",
    "types": ["jest"],
    "downlevelIteration": true,
    "useUnknownInCatchVariables": false,
    "module": "commonjs",
    "lib": ["es2015", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["**/*.spec.ts", "node_modules", "dist"]
}
